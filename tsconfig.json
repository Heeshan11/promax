{
  "compilerOptions": {
    "baseUrl": ".", // Required for path mappings
    "paths": {
      "@pages/*": ["src/pages/*"],
      "@components/*": ["src/components/*"],
      "@data/*": ["src/data/*"],
      "@app/*": ["src/*"]
    },
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "lib": ["ES6", "DOM"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  }
}
